{
	"manifest_version" : 2,
	
	"version" : "1.0.0",
	"name" : "YouTube Adsless",
	"short_name" : "YouTube Adsless",
	"description" : "YouTube Adsless - extension to watch videos without ads",
	
	"icons" : {
		"16" : "img/icon-16.png",
		"48" : "img/icon-48.png",
		"128" : "img/icon-128.png"
	},
	
	"background" : {
		"scripts": ["background.js"]
	},
	
	"web_accessible_resources" : [],
	
	"permissions" : [
		"tabs",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"contextMenus",
		"<all_urls>"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "youtube-adsless@example.com",
			"strict_min_version": "42.0"
		}
	}
}